{
  "env": {
    "es6": true,
      "node": true
  },
    "globals": {
      "describe": false,
      "it": false
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 6,
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true,
        "spread": true
      },
      "sourceType": "module"
    },
    "rules": {
      "indent": [
        "error",
      2,
      {
        "SwitchCase": 1,
        "MemberExpression": 0
      }
      ],
      "quotes": [
        "error",
      "single"
      ],
      "semi": [
        "error",
      "always"
      ]
    }
}
